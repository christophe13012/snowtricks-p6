{% extends 'base.html.twig' %}

{% block title %}Reset!
{% endblock %}

{% block body %}
	<div class="container p-5 text-center">
		<div class="row justify-content-md-center">
			<div class="col-6">
				{% if reset %}
					<form action="" method="post">
						<h1 class="h3 mb-3 font-weight-normal">Réinitialiser le mot de passe</h1>
						<div class="form-group">
							<label>Merci d'entrer le nouveau mot de passe</label>
							<input type="password" name="password" class="form-control" value="">
						</div>
						<div class="form-group">
							<input type="submit" name="valider_new" class="btn btn-primary" value="Confirmer">
						</div>
						{% if error %}
							<div class="alert alert-danger" role="alert">
								{{error}}
							</div>
						{% endif %}
						{% if success %}
							<div class="alert alert-success" role="alert">
								Votre mot de passe a bien été modifié
							</div>
						{% else %}
							<p>
								<a href="{{path('home')}}">Annuler</a>
							</p>
						{% endif %}
					</form>
				{% else %}
					<form method="post">
						<h1 class="h3 mb-3 font-weight-normal">Changement du mot de passe</h1>
						<label for="username">Entrer votre identifiant pour recevoir le lien</label>
						<input type="text" value="" name="username" id="username" class="form-control mb-3" required autofocus>
						{% if error %}
							<div class="alert alert-danger mt-3">
								{{ error }}
							</div>
						{% endif %}
						<button class="btn btn-primary mt-3" type="submit" name="valider">
							Valider
						</button>
					</form>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
